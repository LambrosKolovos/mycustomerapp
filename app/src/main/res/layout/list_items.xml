<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/idListItem">

    <!--image view for displaying the first letter of contact-->
    <ImageView
        android:id="@+id/idIconContact"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="3dp"
        android:src="@mipmap/ic_launcher"
        app:srcCompat="@drawable/icon" />

    <!--text view for displaying user name-->
    <TextView
        android:id="@+id/idContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@id/idIconContact"

        android:text="Name"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/idContactLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/idContactName"
        android:layout_toRightOf="@id/idIconContact"
        android:text="Last Name"
        android:textColor="@color/black"
        android:textSize="18dp" />

</RelativeLayout>