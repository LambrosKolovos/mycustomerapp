<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowInfoActivity">


    <ImageView
        android:id="@+id/idIVContact"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/purple_200"
        android:padding="50dp"
        android:src="@drawable/ic_account"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/idTVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVContact"
        android:background="@color/purple_200"
        android:padding="8dp"
        android:text="FullName"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/idTVLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVContact"
        android:layout_marginTop="50dp"
        android:background="@color/purple_200"
        android:padding="8dp"
        android:text="LastName"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="314dp"
            android:layout_height="50dp">
            <!--image view for making a call -->
            <ImageView
                android:id="@+id/idIVCall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:padding="4dp"

                android:src="@drawable/"
                app:tint="@color/purple_700" />
            <!--text view for displaying user contact-->
            <TextView
                android:id="@+id/idTVPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="9dp"

                android:layout_toEndOf="@id/idIVCall"
                android:layout_toRightOf="@id/idIVCall"
                android:text="Phone" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="314dp"
            android:layout_height="50dp">
            <!--image view for making a call -->
            <ImageView
                android:id="@+id/idIVSendEmail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:src="@drawable/"
                app:tint="@color/purple_700" />
            <!--text view for displaying user contact-->
            <TextView
                android:id="@+id/idTVEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="9dp"

                android:layout_toEndOf="@id/idIVSendEmail"
                android:layout_toRightOf="@id/idIVSendEmail"
                android:text="E-mail" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/idTVBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVContact"
        android:layout_marginTop="211dp"
        android:background="@color/purple_200"
        android:padding="8dp"
        android:text="Birthday"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/del_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:text="DELETE" />
</RelativeLayout>