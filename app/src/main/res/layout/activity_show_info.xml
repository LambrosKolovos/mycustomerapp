<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowInfoActivity">


    <ImageView
        android:id="@+id/idContact"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/purple_200"
        android:padding="50dp"
        app:tint="@color/white"
        android:src="@drawable/ic_person_white_24" />

    <TextView
        android:id="@+id/idName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idContact"
        android:background="@color/purple_200"
        android:padding="8dp"
        android:text="FullName"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/idLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idContact"
        android:layout_marginTop="50dp"
        android:background="@color/purple_200"
        android:padding="8dp"
        android:text="LastName"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="314dp"
            android:layout_height="50dp">
            <!--image view for making a call -->
            <ImageView
                android:id="@+id/idIconPhone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:padding="4dp"
                app:tint="@color/purple_700"
                android:src="@drawable/ic_phone_24"/>
            <!--text view for displaying user contact-->
            <TextView
                android:id="@+id/idPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="9dp"

                android:layout_toEndOf="@id/idIconPhone"
                android:layout_toRightOf="@id/idIconPhone"
                android:text="Phone" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="314dp"
            android:layout_height="50dp">
            <!--image view for making a call -->
            <ImageView
                android:id="@+id/idIconEmail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                app:tint="@color/purple_700"
                android:src="@drawable/ic_email_24"/>
            <!--text view for displaying user contact-->
            <TextView
                android:id="@+id/idEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="9dp"

                android:layout_toEndOf="@id/idIconEmail"
                android:layout_toRightOf="@id/idIconEmail"
                android:text="E-mail" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/idBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idContact"
        android:layout_marginTop="211dp"
        android:background="@color/purple_200"
        android:padding="8dp"
        android:text="Birthday"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/del_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="17dp"
        android:text="DELETE" />
</RelativeLayout>